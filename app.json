{
  "name": "entrega_aula_simples",
  "scripts": {
	"postdeploy": "python manage.py makemigrations && python manage.py migrate"
  },
  "env": {
    "DEBUG": {
      "required": true
    },
    "PAPERTRAIL_API_TOKEN": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "papertrail",
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "python manage.py test"
      },
      "env": {
        "DEBUG": {
          "required": true
        },
        "PAPERTRAIL_API_TOKEN": {
          "required": true
        }
      },
      "formation": {
        "web": {
          "quantity": 1
        }
      },
      "addons": [
        "papertrail",
        "heroku-postgresql"
      ],
      "buildpacks": [
        {
          "url": "heroku/python"
        }
      ]
    }
  }
}
